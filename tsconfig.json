{
  "ts-node": {
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020", 
      "moduleResolution": "node",
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "declaration": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src"
  ]
}